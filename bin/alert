#!/usr/bin/env bash

SOUND_PATH="$HOME/dotfiles/share/sounds"
# dunsitfy arguments топ
app="$1"
# summary="$2"
# body="$3"
# icon_path="$4"
urgency="$5"

case "$urgency" in
    LOW) sound="none" ;;
    NORMAL) sound="moondrop" ;;
    CRITICAL) sound="gems" ;;
esac

case "$app" in
    timer) sound="jackpot" ;;
    attention) sound="discovery" ;;
    chat) sound="reward" ;;
    work) sound="fruit" ;;
    wf-start) sound="discovery" ;;
    wf-end) sound="reward" ;;
    Spotify) sound="none" ;;
    discord) sound="none" ;;
esac

if [ "$sound" == "none" ]; then
    exit 0
fi

paplay "$SOUND_PATH/$sound.ogg" & disown

exit 0
