#!/usr/bin/env bash

export HYPRLAND_LOG_WLR=1
export XCURSOR_SIZE=24
export GTK_THEME="Catppuccin-Macchiato-Standard-Peach-Dark"
export XCURSOR_THEME=Nordzy-cursors-white
export PATH="$HOME/.cargo/bin:$PATH"
export GOPATH="$HOME/.go"
export PATH="$PATH:$HOME/.go/bin"
export PAGER=nvimpager
export EDITOR="nvim"
export DOTS="$HOME/dotfiles"

# export PISTOL_CHROMA_STYLE=catppuccin-macchiato

export FZF_DEFAULT_OPTS="\
--color=bg+:#222536,bg:#222536,spinner:#b29ae8,hl:#f8b486 \
--color=fg:#9db2f4,header:#f8b486,info:#6380ec,pointer:#f8b486 \
--color=marker:#6380ec,fg+:#8aa4f3,prompt:#6380ec,hl+:#f8b486"

export XDG_CURRENT_DESKTOP=Hyprland
export XDG_SESSION_TYPE=wayland
export XDG_SESSION_DESKTOP=Hyprland

export QT_AUTO_SCREEN_SCALE_FACTOR=1
export QT_QPA_PLATFORM="wayland;xcb"
export QT_WAYLAND_DISABLE_WINDOWDECORATION=1
export QT_QPA_PLATFORMTHEME=qt5ct

export GDK_BACKEND="wayland,x11"
export CLUTTER_BACKEND=wayland
export SDL_VIDEODRIVER=wayland

exec Hyprland
